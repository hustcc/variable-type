{
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "baseUrl": ".",
    "esModuleInterop": true,
    "lib": ["es2019", "dom"],
    "module": "commonjs",
    "moduleResolution": "node",
    "noImplicitReturns": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "declaration": true,
    "outDir": "dist",
    "paths": {
      "*": [
        "node_modules/*"
      ]
    },
    "sourceMap": true,
    "strict": true,
    "target": "es2019"
  },
  "include": [
    "src/**/*",
    "tests/**/*",
    "perf/**/*"
  ]
}
